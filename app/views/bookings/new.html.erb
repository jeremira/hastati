<div class='row'>
  <div class='col-xl-12'>
    <h4 class='page-title-header'><%= @booking.slot.daytime %> <%= @booking.slot.scheduled_at&.strftime("%d/%m/%Y") %></h4>
  </div>
</div>

<div class='row'>
  <div class='col'>
    <p>Hosted by <%= @booking.slot.user.email %>, up to <%= @booking.slot.max_people %> people.</p>
  </div>
</div>

<%= form_with model: @booking, local: true do |form| %>
  <%= form.hidden_field :slot_id, value: @booking.slot_id %>
  <div class='row'>
    <div class='col'>
      <div class='form-group'>
        <%= form.label :people %>
        <%= form.select :people, (1..@booking.slot.max_people).map { |int| [int, int]}, class: 'form-control' %>
      </div>
    </div>
  </div>
  <br>
  <div class='row'>
    <div class='col'>
        <%= form.submit 'Confirm booking', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
