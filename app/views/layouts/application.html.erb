<!DOCTYPE html>
<html>
  <head>
    <title>Hastati Alpha</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <section class='container-fluid'>

      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Chiz</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to 'Events', events_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Bookings', bookings_path, class: 'nav-link' %>
            </li>

            <% if current_user.host? %>
              <li class="nav-item">
                <%= link_to 'Slots', host_slots_path, class: 'nav-link' %>
              </li>
            <% end %>

          </ul>

        </div>
      </nav>

      <% if notice %>
        <p class="alert alert-success" role='alert' ><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-warning" role='alert' ><%= alert %></p>
      <% end %>

      <%= yield %>

      <footer>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
      </footer>

    </section>
  </body>
</html>
